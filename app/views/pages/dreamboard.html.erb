
  <div class="container">
    <i class="fancy-text fa-solid fa-plus"></i>
    <%= link_to "Post a new dream", new_dream_path, class:"fancy-text" %>
    <%= link_to "Go to dreamfeed", dreamfeed_path, class:"fancy-text" %>
  </div>


   <div class="d-flex justify-content-center">
      <h1 class="fancy-text mt-4">My dreams</h1>
  </div>

  <div class="dreams">
    <div class="dreams_content">
      <% @dreams.each do |dream| %>
        <% if dream.scenes.first && dream.scenes.first.image.attached? %>
          <div class="dreams_dream" data-dreams-target="dream">
            <div class="dreams_dream_image" >
                <%= cl_image_tag dream.scenes.first.image.key, crop: :fill %>
            </div>

            <div>
              <%= dream.content %>
            </div>

          </div>
        <% end %>
      <% end %>
    </div>
  </div>
