
<%= render "shared/navbar" %>

  <div class="dreams">
    <div class="dreams_content">
      <% @dreams.each do |dream| %>
        <% if dream.scenes.first && dream.scenes.first.image.attached? %>
          <div class="dreams_dream" data-dreams-target="dream">
            <%= link_to dream_path(dream), class:"text-decoration-none" do %>
              <div class="dreams_dream_image" >
                <%= cl_image_tag dream.scenes.first.image.key, crop: :fill %>
              </div>

              <div class="dreams_title">
                <p id="excerpt"> <%= dream.content %></p>
              </div>
<div class="d-flex justify-content-center ml-4">
          <div class="btn-delete">
                <% if dream.user == current_user%>
                <%= link_to "",
                          dream_path(dream),
                          class: "fa-regular fa-trash-can",
                          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
                        %>
                <% end %>
          </div>
</div>
              </div>
            <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
