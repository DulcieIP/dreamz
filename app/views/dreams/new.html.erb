<div data-controller="hiddenloading">
  <div data-hiddenloading-target="form">
    <div class="container">
      <div class="container-form align-items-center d-flex flex-column justify-content-center">
        <h3 class="">Tell me your dream</h3>
        <%= simple_form_for(@dream, html: { class: "w-100", data: { action: "submit->hiddenloading#show"}}) do |f| %>
          <div class="position-relative">
            <%= f.input :content, as: :text, label: false %>
            <i class="fa-solid fa-circle-info position-absolute bottom-0 end-0 p-3"></i>
          </div>
          <button type="submit" name="commit" class="custom-btn btn-6 displayed" data-disable-with="Create Dream">
          </button>
        <% end %>
        <div class="d-flex justify-content-center btn-dreamboard">
          <%=link_to "Go to Dreamboard", dreamboard_path, class: "btn-dreamboard-go" %>
        </div>
      </div>
    </div>
  </div>

  <div class="hiddenloading d-none" data-hiddenloading-target="loading">
    <%# Quantity should be the same in Sass %>
    <% quantity = 14 %>
    <% for i in 1..quantity do %>
      <div class="firefly"></div>
    <% end %>
  </div>

</div>
